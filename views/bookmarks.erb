<h1> Bookmarks </h1>

<ul>
  <% @bookmarks.each do |bookmark| %>
    <li class="bookmark" id="bookmark <%=bookmark.id%>">
      <a href="<%= bookmark.url %>">
        <%= bookmark.title %>
        </a>
        <form action='/bookmarks/<%= bookmark.id%>' method="post">
        <input type="hidden" name = '_method' value="DELETE"/>
        <input type="submit" value="delete this!"/>
        </form>
        <form action='/bookmarks/<%= bookmark.id%>/edit' method="get">
        <input type="submit" value="modify this!"/>
        </form>
        </li>
    <% end %>
    </ul>

<form action=/add_bookmark method='post'>
  <label>
    URL:
  </label>
  <input type="text" name="url"><br>
  <label>
    NAME:
  </label>
  <input type="text" name="title"><br>
  <button type="submit" value="Submit">create Bookmark</button>
  </form>
